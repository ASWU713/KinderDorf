<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EventDetailsFragment">

    <TextView
        android:id="@+id/eventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Details"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/eventDetailsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/eventTitle"
        app:layout_constraintStart_toStartOf="@+id/eventTitle"
        android:text = "Enter or update your requested time:"
        android:textSize="15sp">

    </TextView>
    <EditText
        android:id="@+id/eventDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/eventDetailsText"
        app:layout_constraintStart_toStartOf="@+id/eventTitle"
        android:hint="Enter your Date">
    </EditText>
    <EditText
        android:id="@+id/eventTimeRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/eventDateRange"
        app:layout_constraintStart_toStartOf="@+id/eventTitle"
        android:hint="Enter your Time">
    </EditText>
    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/eventTitle"
        app:layout_constraintTop_toBottomOf="@id/eventTimeRange"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Create/Update">
    </Button>
    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/eventTitle"
        app:layout_constraintTop_toBottomOf="@id/createButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Create/Update">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>